<style>
  .container {
    max-width: 90%;
    width: 1200px;
    margin: 20px auto;
    overflow: hidden;
  }

  .display-3 {
    font-weight: 700;
    font-size: 34px;
    text-align: center;
  }

  .display-1 {
    font-weight: 700;
    font-size: 54px;
    font-style: bold;
    text-align: center;
  }
  .container h2 {
    font-size: 34px;
  }

  p {
    font-size: 20px;
    text-align: justify;
  }

  code {
    display: block;
    background-color: #2f343d;
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 3%;
  }
  .card {
    padding: 40px;
    border-radius: 3px;

    box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.14),
      0px 3px 1px -2px rgba(0, 0, 0, 0.12), 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
    border: 3px solid #2b3752;
  }
  .title {
    font-family: "Quicksand", sans-serif;
    margin-top: 0;

    font-size: 25px;
    margin-bottom: 3%;
    font-weight: bold;
  }
  .body {
    font-family: "Open Sans", sans-serif;

    margin-top: 5px;
  }
  .grid {
    display: grid;
    gap: 20px;
    margin-bottom: 20px;
  }
  .col-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  .span-2 {
    grid-column: span 2;
  }
  .btn {
    border: none;
    text-decoration: none;
    cursor: pointer;
    display: inline-block;
    padding: 10px 15px;
    border-radius: 3px;
    text-align: center;
    line-height: 22px;
    transition: 0.3s ease all;
    background: #86ee60;
    color: #2b3752;
    font-family: "Open Sans", sans-serif;
    margin-top: 1vh;
    margin-left: 20vw;
  }
  .btn:hover {
    box-shadow: 1px 1px #000000, 2px 2px #000000, 3px 3px #000000;
    transform: translateX(-3px);
  }

  /* Moviles*/
  @media screen and (max-width: 576px) {
    .sm-col-1 {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
